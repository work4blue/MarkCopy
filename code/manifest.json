{
	"name": "MarkCopy",
	"version": "1.10",
	"manifest_version": 2,
	"description": "__MSG_pluginDesc__",
  "default_locale": "en",
  "background": {
       "page": "bg.html"
  },
	"icons": {
        "19": "img/mc-19.png",
        "128": "img/mc-128.png"
	},
	
  "page_action": {
    "default_icon": {
      "19": "img/mc-19.png",
      "128": "img/mc-128.png"
    },
    "default_title": "__MSG_tooltips__"
  },
	"commands": {
      "copyMdReferBlock": {
       "suggest_key": {
        "default": "Ctrl+C"
      },
      "description": "__MSG_menu_refer_block__"
    },
    "copyMdFootmark": {
      "suggest_key": {
        "default": "Ctrl+Alt+c"
      },
      "description": "__MSG_menu_footmark__"
    },
     "copyMdLink": {
      "suggest_key": {
        "default": "Ctrl+Alt+L"
      },
      "description": "__MSG_menu_link__"
    },
     "exchangeTabs": {
      "suggest_key": {
        "default": "Ctrl + E"
      },
      "description": "__MSG_menu_exchange_tabs__"
    }
  },
	"permissions": ["tabs", "<all_urls>", "clipboardWrite",
    "contextMenus"]
}
