{
	"name": "MarkCopy",
	"version": "1.08",
	"manifest_version": 2,
	"description": "__MSG_pluginDesc__",
  "default_locale": "en",
  "background": {
       "page": "bg.html"
  },
	"icons": {
        "19": "img/mc-19.png",
        "128": "img/mc-128.png"
	},
	
  "page_action": {
    "default_icon": {
      "19": "img/mc-19.png",
      "128": "img/mc-128.png"
    },
    "default_title": "single click: copy selected tab as  refer block\ndouble click: copy selected tab as  footmark\ntriple click:copy selected tab as link"
  },
	"commands": {
      "copyMdTextBlock": {
       "suggest_key": {
        "default": "Ctrl+C"
      },
      "description": "Copy as refer block (without description)"
    },
    "copyMdFootmark": {
      "suggest_key": {
        "default": "Ctrl+Alt+c"
      },
      "description": "Copy as footmark  (without description)"
    },
     "copyMdLink": {
      "suggest_key": {
        "default": "Ctrl+Alt+L"
      },
      "description": "Copy page url as MarkDown link"
    },
     "exchangeTabs": {
      "suggest_key": {
        "default": "Ctrl + E"
      },
      "description": "exchangeTabs in two tabs"
    }
  },
	"permissions": ["tabs", "<all_urls>", "clipboardWrite",
    "contextMenus"]
}
